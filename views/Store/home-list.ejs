<%- include('../partials/head') %>
  </head>

  <body class="bg-gray-50">
    <%- include('../partials/nav') %>

      <main class="max-w-6xl mx-auto mt-10 px-4">
        <h2 class="text-3xl text-red-500 font-bold mb-6 text-center">Here are our registered Homes</h2>

        <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <% registeredHomes.forEach((home)=> { %>
            <li>
              <!-- Entire Card Clickable -->
              <a href="/homes/<%= home._id %>"
                class="block bg-white rounded-lg shadow hover:shadow-lg transition duration-300 overflow-hidden">
                <!-- Image with Rating Badge -->
                <div class="relative h-48 w-full bg-cover bg-center  overflow-hidden group">
                  <img src="<%= home.photo %>" alt="homePhoto" class="relative h-48 w-full bg-cover bg-center object-cover transform transition-transform duration-300 group-hover:scale-110">
                  <div class="absolute top-2 left-2 flex items-center bg-white px-2 py-1 rounded shadow text-sm">
                    <svg class="w-4 h-4 text-yellow-400 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path
                        d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                    <span>
                      <%= home.rating %>
                    </span>
                  </div>
                </div>

                <!-- Home Info -->
                <div class="p-4 text-gray-700 space-y-1">
                  <h3 class="font-semibold text-lg">
                    <%= home.houseName %>
                  </h3>
                  <p class="text-sm text-gray-500">
                    <%= home.location %>
                  </p>
                  <p class="text-sm text-blue-600 mt-2">
                    <span class="font-bold">â‚¹ <%= home.price %></span> <span class="text-gray-400">/ night</span>
                  </p>

                  <!-- Buttons -->
                  <div class="flex justify-between items-center mt-4">
                    <button class="bg-red-500 text-white px-3 py-1 rounded-md hover:bg-red-600 text-sm">
                      Reserve
                    </button>

                    <%- include('../partials/favourates', { home: home }) %>
                  </div>
                </div>
              </a>
            </li>
            <% }) %>
        </ul>
      </main>
  </body>

  </html>